#!/usr/bin/env php
<?php
$appDir = dirname(dirname(dirname(dirname(__DIR__))));
$cmd = sprintf(
    "%s/vendor/bin/classpreloader.php compile --quiet --config=%s/bear.preload.config.php --output=%s",
    $appDir,
    __DIR__,
    $appDir . '/preload.php'
);

passthru($cmd);
echo $appDir . '/preload.php' . ' is generated.' . PHP_EOL;