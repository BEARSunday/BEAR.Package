{
    "name": "bear/package",
    "description": "BEAR.Sunday application framework package",
    "keywords": [
        "BEAR.Sunday",
        "DI",
        "AOP",
        "REST",
        "framework"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "BEAR.Package Contributors",
            "homepage": "https://github.com/bearsunday/BEAR.Package/graphs/contributors"
        }
    ],
    "require": {
        "php": ">=7.0.0",
        "aura/cli": "^2.2",
        "bear/app-meta": "^1.4",
        "bear/query-repository": "1.4.5",
        "bear/sunday": "^1.2.2",
        "bear/streamer": "^1.0.1",
        "monolog/monolog" : "^1.22",
        "ray/di":  "^2.7",
        "ray/aop":  "^2.7.2",
        "ray/compiler": "1.3.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.2"
    },
    "autoload": {
        "psr-4": {
            "BEAR\\Package\\": ["src/"]
        },
        "files": ["src-files/apcu.php"],
        "exclude-from-classmap": ["/tests/", "/example/"]
    },
    "autoload-dev": {
        "psr-4": {
            "BEAR\\Package\\": ["tests/", "tests/Fake/"],
            "FakeVendor\\HelloWorld\\": ["tests/Fake/fake-app/src/"]
        }
    },
    "bin": [
        "bin/bear.compile"
    ],
    "scripts" :{
      "test": ["@cs", "phpunit", "phpstan analyse -l max src tests -c phpstan.neon --no-progress"],
        "coverage": ["php -dzend_extension=xdebug.so ./vendor/bin/phpunit --coverage-text --coverage-html=build/coverage"],
        "cs": ["php-cs-fixer fix -v --dry-run", "phpcs --standard=./phpcs.xml src"],
        "cs-fix": ["php-cs-fixer fix -v", "phpcbf src"]
    }
}
