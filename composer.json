{
    "name": "bear/package",
    "description": "BEAR.Sunday framework package",
    "keywords": [
        "BEAR.Sunday",
        "DI",
        "AOP",
        "REST",
        "framework",
        "hypermedia",
        "API"
    ],
    "homepage": "https://github.com/koriym/BEAR.Package",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "BEAR.Package Contributors",
            "homepage": "https://github.com/koriym/BEAR.Package/graphs/contributors"
        }
    ],
    "provide": {
        "bear/framework": "0.9.0"
    },
    "require": {
        "php": ">=5.4.0",
        "bear/sunday": "0.*",
        "koriym/fusion-cache": "*",

        "aura/input": "1.*",
        "aura/view": "1.*",
        "aura/router": "2.*@dev",
        "aura/web": "dev-develop-2",
        "aura/sql": "2.*@dev",
        "doctrine/dbal": "2.*",
        "pagerfanta/pagerfanta": "1.*",
        "playmedia/smarty": "3.*",
        "symfony/http-foundation": "2.*",
        "twig/twig": "1.*"
    },
    "require-dev": {
        "bear/dev-package": "*"
    },
    "suggest": {
        "bear/phptal-module": "PHPTAL template-engine module"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "BEAR\\Package\\": "src/"
        }
    },
    "bin": [
        "bin/bear.compile",
        "bin/bear.create-resource",
        "bin/bear.server"
    ],
    "scripts": {
        "post-autoload-dump": ["BEAR\\Package\\Installer::packageUpdate"]
    }
}
