{
    "name": "bear/package",
    "description": "BEAR.Sunday framework package",
    "keywords": [
        "BEAR.Sunday",
        "DI",
        "AOP",
        "REST",
        "framework",
        "hypermedia",
        "API"
    ],
    "homepage": "https://github.com/koriym/BEAR.Package",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "BEAR.Package Contributors",
            "homepage": "https://github.com/koriym/BEAR.Package/graphs/contributors"
        }
    ],
    "provide": {
        "bear/framework": "0.11.0"
    },
    "require": {
        "php": ">=5.4.0",
        "bear/sunday": "~0.10",
        "koriym/fusion-cache": "~0.1",

        "aura/input": "~1.0",
        "aura/view": "~1.0",
        "aura/router": "~2.0@dev",
        "aura/web": "dev-develop-2",
        "aura/sql": "~2.0",
        "doctrine/dbal": "~2.0",
        "pagerfanta/pagerfanta": "~1.0",
        "symfony/http-foundation": "~2.0",
        "twig/twig": "~1.0"
    },
    "require-dev": {
        "bear/dev-package": "~0.2   ",
        "bear/demo-apps": "~0.1@dev",
        "koriym/printo": "~1.0@dev",
        "noiselabs/smarty": "~3.1",
        "facebook/xhprof": "dev-master"
    },
    "suggest": {
        "bear/phptal-module": "PHPTAL template-engine module"
    },
    "autoload": {
        "psr-4": {
            "BEAR\\Package\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BEAR\\Package\\": "src-dev/",
            "Demo\\Helloworld\\": "apps/Demo.Helloworld/"
        },
        "files": [
            "src-dev/debuglib.php",
            "src-dev/p.php"
        ]
    },
    "bin": [
        "bin/bear.compile",
        "bin/bear.create-resource",
        "bin/bear.server"
    ],
    "scripts": {
        "post-autoload-dump": ["BEAR\\Package\\Installer::packageUpdate"]
    }
}
