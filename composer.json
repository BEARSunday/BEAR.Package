{
    "name":"bear/package",
    "description":"BEAR.Sunday framework package",
    "keywords":[
        "BEAR.Sunday",
        "DI",
        "AOP",
        "REST",
        "framework",
        "hypermedia",
        "API"
    ],
    "homepage":"https://github.com/koriym/BEAR.Package",
    "license":"BSD-3-Clause",
    "authors":[
        {
            "name": "BEAR.Package Contributors",
            "homepage": "https://github.com/koriym/BEAR.Package/graphs/contributors"
        }
    ],
    "provide":{
        "bear/framework": "0.8.0"
    },
    "suggest": {
        "bear/phptal-module": "PHPTAL template-engine module"
    },
    "require":{
        "php":">=5.4.0",
        "ext-curl":"*",
        "bear/resource":"dev-develop",
        "ray/aop":"dev-develop",
        "ray/di":"dev-develop",
        "bear/sunday":"dev-develop",
        "bear/ace":"1.0.*",
        "ray/aop":"dev-develop",
        "aura/input": "1.1.*",
        "aura/view": "1.1.2",
        "aura/router":"1.0.*",
        "aura/web":"1.*",
        "doctrine/annotations":"1.*",
        "doctrine/cache":"1.*",
        "doctrine/dbal":"2.3.*",
        "guzzle/guzzle":"3.3.*",
        "nocarrier/hal":"0.9.*",
        "pagerfanta/pagerfanta":"1.*",
        "playmedia/smarty":"3.1.*",
        "symfony/console":"2.0.*",
        "symfony/http-foundation":"2.0.*",
        "symfony/routing": "2.2.*",
        "zendframework/zend-log":"2.1.*",
        "zendframework/zend-db": "2.1.*",
        "zendframework/zend-stdlib": "2.1.*",
        "classpreloader/classpreloader": "1.*"
    },
    "require-dev":{
        "printo/printo":"0.1.*",
        "facebook/xhprof":"dev-master",
        "firephp/firephp-core":"*",
        "dg/adminer-custom": "1.*",
        "twig/twig":"1.*"
    },
    "autoload":{
        "files": [
            "src/BEAR/Package/Bootstrap/getApp.php",
            "src/BEAR/Package/Bootstrap/registerLoader.php"
        ],
        "psr-0":{
            "BEAR\\Package":"src/"
        }
    },
    "scripts"   :{
        "post-autoload-dump": ["BEAR\\Package\\Installer::packageUpdate"]
    },
    "repositories":[
        {
            "type":"composer",
            "url":"http://packages.zendframework.com/"
        }
    ]
}
