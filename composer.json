{
    "name": "bear/package",
    "description": "BEAR.Sunday application framework package",
    "keywords": [
        "BEAR.Sunday",
        "DI",
        "AOP",
        "REST",
        "framework"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "BEAR.Package Contributors",
            "homepage": "https://github.com/bearsunday/BEAR.Package/graphs/contributors"
        }
    ],
    "require": {
        "php": "^7.2 || ^8.0",
        "ext-hash": "*",
        "ext-json": "*",
        "ext-zend-opcache": "*",
        "aura/cli": "^2.2",
        "bear/app-meta": "^1.6.2",
        "bear/query-repository": "^1.6",
        "bear/resource": "^1.14 || 1.x-dev",
        "bear/streamer": "^1.0.1",
        "bear/sunday": "^1.4.1 || 1.x-dev",
        "monolog/monolog": "^1.25 || ^2.0",
        "ray/di": "^2.10.5",
        "ray/aop": "^2.9.9",
        "ray/object-visual-grapher": "^1.0",
        "psr/log": "^1.1",
        "doctrine/cache": "^1.10",
        "doctrine/annotations": "^1.10",
        "composer/composer": "^1.10",
        "koriym/http-constants": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5"
    },
    "autoload": {
        "psr-4": {
            "BEAR\\Package\\": [
                "src/",
                "src-deprecated"
            ]
        },
        "files": [
            "src-files/apcu.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "BEAR\\Package\\": [
                "tests/",
                "tests/Fake/"
            ],
            "FakeVendor\\HelloWorld\\": [
                "tests/Fake/fake-app/src/"
            ]
        },
        "files": [
            "tests-files/hash.php"
        ]
    },
    "bin": [
        "bin/bear.compile",
        "bin/bear.compile.php"
    ],
    "scripts": {
        "coverage": [
            "phpunit -v --coverage-clover ./build/logs/clover.xml --coverage-text --coverage-html=build/coverage"
        ],
        "cs": [
            "phpcs --standard=./phpcs.xml src"
        ],
        "cs-fix": [
            "phpcbf src"
        ],
        "metrics": [
            "phpmetrics --report-html=build/metrics/ --extensions=php src,composer.json,composer.lock"
        ],
        "test": [
            "phpunit"
        ],
        "tests": [
            "@cs",
            "phpstan analyse -c phpstan.neon",
            "psalm --show-info=false",
            "@test"
        ]
    }
}
