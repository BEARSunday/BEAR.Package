{
    "name":"bear/package",
    "description":"BEAR.Sunday framework package",
    "keywords":[
        "BEAR.Sunday",
        "DI",
        "AOP",
        "REST",
        "framework",
        "hypermedia",
        "API"
    ],
    "homepage":"https://github.com/koriym/BEAR.Package",
    "license":"BSD-3-Clause",
    "authors":[
        {
            "name": "BEAR.Package Contributors",
            "homepage": "https://github.com/koriym/BEAR.Package/graphs/contributors"
        }
    ],
    "provide":{
        "bear/framework": "0.9.0"
    },
    "suggest": {
        "bear/phptal-module": "PHPTAL template-engine module"
    },
    "require":{
        "php":">=5.4.0",
        "ray/aop":"dev-develop",
        "ray/di":"dev-develop",
        "bear/resource":"dev-develop",
        "bear/sunday":"dev-develop",

        "aura/input": "1.*",
        "aura/view": "1.*",
        "aura/router":"1.*",
        "aura/web":"1.*",
        "aura/sql":"2.*@dev",
        "doctrine/dbal":"2.*",
        "pagerfanta/pagerfanta":"1.*",
        "playmedia/smarty":"3.*",
        "symfony/routing": "2.*",
        "twig/twig":"1.*",
        "koriym/fusion-cache":"*"
    },
    "require-dev":{
        "bear/ace":"1.*",
        "classpreloader/classpreloader": "1.*",
        "dg/adminer-custom": "1.*",
        "facebook/xhprof":"dev-master",
        "firephp/firephp-core":"*",
        "phpunit/phpunit": "3.7.*",
        "phpunit/dbunit": "1.3.*",
        "printo/printo":"0.*",
        "zendframework/zend-log":"2.*",
        "zendframework/zend-db": "2.*",
        "zendframework/zend-stdlib": "2.*"
    },
    "autoload":{
        "files": [
            "src/Bootstrap/getApp.php",
            "src/Bootstrap/registerLoader.php"
        ],
        "psr-4":{
            "BEAR\\Package\\": "src/"
        }
    },
    "scripts"   :{
        "post-autoload-dump": ["BEAR\\Package\\Installer::packageUpdate"]
    },
    "repositories":[
        {
            "type":"composer",
            "url":"http://packages.zendframework.com/"
        }
    ]
}
