{
    "name": "bear/package",
    "description": "BEAR.Sunday framework package",
    "keywords": [
        "BEAR.Sunday",
        "DI",
        "AOP",
        "REST",
        "framework",
        "hypermedia",
        "API"
    ],
    "homepage": "https://github.com/koriym/BEAR.Package",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "BEAR.Package Contributors",
            "homepage": "https://github.com/koriym/BEAR.Package/graphs/contributors"
        }
    ],
    "provide": {
        "bear/framework": "1.0.0"
    },
    "require": {
        "php": ">=5.5.0",
        "bear/sunday": "~1.0@dev",
        "bear/query-repository": "~1.0@dev",
        "koriym/psr4list": "~1.0@dev",
        "aura/router": "~2.0",
        "aura/web": "~2.0",
        "aura/cli": "~2.0",
        "ray/web-param-module": "~0.1"
    },
    "require-dev": {
        "facebook/xhprof": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "BEAR\\Package\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BEAR\\Package\\": "tests/",
            "BEAR\\Package\\": "tests/Fake",
            "FakeVendor\\HelloWorld\\": "tests/Fake/fake-app/src"
        }
    },
    "prefer-stable": true,
    "bin": [
        "bin/bear.env",
        "bin/bear.preload"
    ],
    "minimum-stability": "dev",
    "extra": {
        "branch-alias": {
            "dev-develop-2": "1.0.x-dev"
        }
    }
}
