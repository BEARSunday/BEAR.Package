{
    "name": "bear/package",
    "description": "BEAR.Sunday application framework package",
    "keywords": [
        "BEAR.Sunday",
        "DI",
        "AOP",
        "REST",
        "framework"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "BEAR.Package Contributors",
            "homepage": "https://github.com/bearsunday/BEAR.Package/graphs/contributors"
        }
    ],
    "require": {
        "php": ">=7.2.0",
        "ext-hash": "*",
        "ext-json": "*",
        "aura/cli": "^2.2",
        "bear/app-meta": "^1.6",
        "bear/query-repository": "^1.6",
        "bear/resource": "^1.14",
        "bear/streamer": "^1.0.1",
        "doctrine/annotations": "^1.10",
        "doctrine/cache": "^1.10",
        "koriym/http-constants": "^1.1",
        "monolog/monolog": "^1.25 || ^2.0",
        "psr/log": "^1.1",
        "ray/aop": "^2.9",
        "bear/sunday": "^1.4.1",
        "monolog/monolog": "^1.25 || ^2.0",
        "ray/compiler": "^1.5",
        "ray/di": "^2.10.3",
        "ray/object-visual-grapher": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "BEAR\\Package\\": [
                "src/",
                "src-deprecated"
            ]
        },
        "files": [
            "src-files/apcu.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "BEAR\\Package\\": [
                "tests/",
                "tests/Fake/"
            ],
            "FakeVendor\\HelloWorld\\": [
                "tests/Fake/fake-app/src/"
            ]
        }
    },
    "bin": [
        "bin/bear.compile",
        "bin/bear.compile.php"
    ],
    "scripts": {
        "coverage": [
            "php -dzend_extension=xdebug.so ./vendor/bin/phpunit --coverage-text --coverage-html=build/coverage"
        ],
        "cs": [
            "php-cs-fixer fix -v --dry-run",
            "phpcs --standard=./phpcs.xml src"
        ],
        "cs-fix": [
            "php-cs-fixer fix -v",
            "phpcbf src"
        ],
        "metrics": [
            "phpmetrics --report-html=build/metrics/ --extensions=php src,composer.json,composer.lock"
        ],
        "test": [
            "phpunit"
        ],
        "tests": [
            "@cs",
            "phpstan analyse -c phpstan.neon",
            "psalm --show-info=false",
            "@test"
        ]
    }
}
